[Desktop Entry]
Version=1.0
Type=Application
Name=Bastion Firewall
GenericName=Application Firewall
Comment=üè∞ Your Last Line of Defense - Control which applications can access the network
Exec=/usr/bin/bastion-launch
Icon=bastion-icon
Terminal=false
Categories=System;Security;Network;
Keywords=firewall;security;network;outbound;application;
StartupNotify=true
NoDisplay=false
X-GNOME-Autostart-enabled=false
Actions=ControlPanel;Stop;

[Desktop Action ControlPanel]
Name=Control Panel
Exec=/usr/bin/bastion-control-panel

[Desktop Action Stop]
Name=Stop Firewall
Exec=pkexec killall bastion-daemon bastion-gui

